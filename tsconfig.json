{
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "/dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": [
      "es5",
      "es6",
      "dom",
      "dom.iterable"
    ],
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./app/interfaces/types.d.ts"
    ],
  },
}